{
  // ============================== //
  //      Appearance & Themes       //
  // ============================== //
  "window.autoDetectColorScheme": true,
  "workbench.preferredDarkColorTheme": "Monokai Pro",
  "workbench.preferredLightColorTheme": "Monokai Pro Light",
  "workbench.iconTheme": "Monokai Pro Icons",
  "workbench.tree.enableStickyScroll": true,
  "workbench.editor.labelFormat": "short",
  "workbench.startupEditor": "none",
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.value": 10,
  "workbench.activityBar.location": "side",
  "workbench.sideBar.location": "left",
  "workbench.statusBar.visible": true,
  "workbench.editor.untitled.hint": "hidden",
  "workbench.editor.binaryDiffEditor.layout": "inline",

  // ============================== //
  //         Editor & Layout        //
  // ============================== //
  "editor.fontFamily": "'Fira Code', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.lineHeight": 1.8,
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 180,
  "editor.rulers": [100, 180],
  "editor.lineNumbers": "on",
  "editor.detectIndentation": true,
  "editor.tabSize": 2,
  "editor.insertSpaces": false,
  "editor.minimap.enabled": false,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.smoothScrolling": true,
  "editor.renderLineHighlight": "gutter",
  "editor.accessibilitySupport": "off",
  "editor.find.autoFindInSelection": "multiline",
  "editor.renderWhitespace": "selection",
  "editor.scrollBeyondLastLine": false,
  "editor.links": true,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.formatOnSaveMode": "modificationsIfAvailable",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.stickyScroll.enabled": true,
  "editor.stickyScroll.maxLineCount": 5,

  // ============================== //
  //     Git & Source Control       //
  // ============================== //
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.decorations.enabled": true,
  "git.openRepositoryInParentFolders": "always",

  // ============================== //
  //      Formatting & Linting      //
  // ============================== //
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": false,
    "editor.formatOnType": false,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.fixAll.prettier": "explicit"
    }
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": false,
    "editor.formatOnType": false,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.fixAll.prettier": "explicit"
    }
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": false,
    "editor.formatOnType": false,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.fixAll.prettier": "explicit"
    }
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": false,
    "editor.formatOnType": false,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.fixAll.prettier": "explicit"
    }
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  // Prettier Global Config
  "prettier.tabWidth": 2,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "all",
  "prettier.printWidth": 100,
  "prettier.semi": true,
  "prettier.useTabs": false,
  "prettier.endOfLine": "lf",
  "prettier.bracketSpacing": true,
  "prettier.arrowParens": "always",
  "prettier.proseWrap": "preserve",

  // ESLint
  "eslint.format.enable": true,
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
  "eslint.options": {
    "ignorePatterns": ["**/node_modules/**"]
  },
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],

  // ============================== //
  //         Terminal Setup         //
  // ============================== //
  "terminal.integrated.fontFamily": "'JetBrains Mono', monospace",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.defaultProfile.windows": "powershell",
  "terminal.integrated.env.osx": {},
  "terminal.integrated.env.linux": {},
  "terminal.integrated.showExitAlert": false,
  "terminal.integrated.fontLigatures.enabled": true,
  "terminal.external.osxExec": "Ghostty.app",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.enableMultiLinePasteWarning": false,

  // ============================== //
  //        File Management         //
  // ============================== //
  "files.autoSave": "onWindowChange",
  "files.autoSaveDelay": 1000,
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/.next/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/.turbo/**": true,
    "**/.vercel/**": true,
    "**/coverage/**": true,
    "**/.nyc_output/**": true,
    "**/.pnp.*": true,
    "**/.yarn": true
  },
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.encoding": "utf8",
  "files.eol": "\n",
  "files.defaultLanguage": "typescript",
  "files.exclude": {
    "**/.git": false,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.idea": true,
    "**/*.iml": true,
    "**/.vscode": false,
    "**/node_modules": false,
    "**/.next": true,
    "**/dist": false,
    "**/build": false,
    "**/.turbo": true,
    "**/.vercel": true,
    "**/.serverless": true,
    "**/*.lock": false,
    "**/.env.local": false,
    "**/.env.production": true,
    "**/coverage": true,
    "**/.nyc_output": true,
    "**/.pnp.*": true,
    "**/.yarn": true,
    "**/yarn-error.log": true,
    "**/.eslintcache": true,
    "**/.stylelintcache": true,
    "**/.parcel-cache": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/dist": true,
    "**/build": true,
    "**/.next": true,
    "**/.nuxt": true,
    "**/coverage": true,
    "**/.turbo": true,
    "**/.vercel": true,
    "**/*.lock": true,
    "**/package-lock.json": true,
    "**/yarn.lock": true,
    "**/pnpm-lock.yaml": true,
    "**/bun.lockb": true
  },
  "files.associations": {
    ".env": "dotenv",
    ".env.*": "dotenv",
    "*.env": "dotenv",
    ".env.example": "dotenv",
    "*.js": "javascript",
    "*.jsx": "javascriptreact",
    "*.ts": "typescript",
    "*.tsx": "typescriptreact",
    "*.mjs": "javascript",
    "*.cjs": "javascript",
    "*.mts": "typescript",
    "*.cts": "typescript",
    "*.css": "tailwindcss",
    "*.scss": "scss",
    "*.sass": "sass",
    "*.less": "less",
    "*.styl": "stylus",
    "*.postcss": "tailwindcss",
    "*.md": "markdown",
    "*.mdx": "mdx",
    "*.markdown": "markdown",
    "README": "markdown",
    ".prettierrc": "json",
    ".eslintrc": "json",
    ".babelrc": "json",
    ".stylelintrc": "json",
    ".lintstagedrc": "json",
    ".commitlintrc": "json",
    "*.json5": "json5",
    "*.jsonc": "jsonc",
    "*.yml": "yaml",
    "*.yaml": "yaml",
    "*rc": "shellscript",
    "*rc.symlink": "shellscript",
    "*.sh": "shellscript",
    "*.bash": "shellscript",
    "*.zsh": "shellscript",
    ".bashrc": "shellscript",
    ".zshrc": "shellscript",
    "Dockerfile*": "dockerfile",
    "*.dockerfile": "dockerfile",
    "docker-compose*": "dockercompose",
    "*.sql": "sql",
    "*.psql": "sql",
    "*.mysql": "sql",
    "*.pgsql": "sql",
    "*.prisma": "prisma",
    "*.graphql": "graphql",
    "*.gql": "graphql",
    "*.tf": "terraform",
    "*.tfvars": "terraform",
    "*.nginx": "nginx",
    "nginx.conf": "nginx",
    "*.log": "log",
    ".gitignore": "ignore",
    ".gitattributes": "git",
    ".gitmodules": "git",
    ".gitlab-ci.yml": "gitlab",
    "azure-pipelines.yml": "azure-pipelines",
    ".travis.yml": "travis",
    "*.toml": "toml",
    "*.ini": "ini",
    "*.cfg": "ini",
    "*.conf": "properties",
    "*.properties": "properties",
    "*.xml": "xml",
    "*.svg": "svg",
    "*.vue": "vue",
    "*.svelte": "svelte",
    "*.astro": "astro",
    "*.json.symlink": "json"
  },

  // ============================== //
  //      Sidebar & Explorer        //
  // ============================== //
  "explorer.sortOrder": "foldersNestsFiles",
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "package.json": ".eslint*, .prettier*, .editorconfig, .gitattributes, .gitignore, .npmrc, .nvmrc, .yarnrc*, .pnp*, .dockerignore, .stylelint*, .commitlint*, .czrc, .lintstagedrc*, .husky, .release*, babel.config*, jest.config*, vitest.config*, playwright.config*, tsconfig*, vite.config*, webpack.config*, rollup.config*, turbo.json, vercel.json, netlify.toml, ecosystem.config*, pm2.config*, nodemon*, .swcrc, nx.json, workspace.json, lerna.json, rush.json, pnpm-*, yarn.lock, package-lock.json, bun.lockb, mise.toml",
    "docker-compose.yml": "docker-compose*, Dockerfile*, .dockerignore",
    "Dockerfile": ".dockerignore, docker-compose*",
    ".env": ".env*, .env.local, .env.development*, .env.test*, .env.production*, .env.staging*",
    ".gitignore": ".gitattributes, .gitmodules, .gitmessage, .mailmap, .git-blame*",
    "README.md": "README*, LICENSE*, CONTRIBUTING*, CHANGELOG*, AUTHORS*, SECURITY*, CODE_OF_CONDUCT*",
    ".github": ".github/*, .gitlab-ci*, .travis*, .circleci*, azure-pipelines*, .jenkins*, bitbucket-pipelines*",
    "tailwind.config.js": "tailwind.config*, postcss.config*, tailwind.preset*",
    "tailwind.config.ts": "tailwind.config*, postcss.config*, tailwind.preset*",
    "next.config.js": "next.config*, next-env.d.ts, next-sitemap*",
    "nest-cli.json": "nest-cli*, .nestjs*",
    "main.ts": "app.module.ts, app.controller*, app.service*",
    "tsconfig.json": "tsconfig*, tsc.config*, tsconfig.build.json, tsconfig.spec.json",
    "schema.prisma": "*.prisma, migrations/, seed*",
    "database": "*.sql, *.sqlite, *.db",
    "*.test.ts": "*.test.ts, *.spec.ts, *.test.tsx, *.spec.tsx",
    "*.test.js": "*.test.js, *.spec.js, *.test.jsx, *.spec.jsx",
    "*.component.ts": "*.component.html, *.component.css, *.component.scss, *.component.spec.ts",
    "*.tsx": "*.module.css, *.module.scss, *.stories.tsx, *.test.tsx, *.spec.tsx",
    "*.jsx": "*.module.css, *.module.scss, *.stories.jsx, *.test.jsx, *.spec.jsx",
    "*.vue": "*.stories.js, *.test.js, *.spec.js",
    "*.controller.ts": "*.controller.spec.ts, *.service.ts, *.service.spec.ts, *.module.ts, *.dto.ts, *.entity.ts, *.schema.ts",
    "main.tf": "*.tf, *.tfvars, .terraform*",
    "deployment.yaml": "*.yaml, *.yml",
    "serverless.yml": "serverless*, .serverless*",
    "requirements.txt": "requirements*, Pipfile*, pyproject.toml, setup.py, setup.cfg",
    "Cargo.toml": "Cargo.lock, rust-toolchain*, .rustfmt*",
    "go.mod": "go.sum, .air*, .golangci*",
    "Gemfile": "Gemfile.lock, .ruby-version, .rvmrc",
    "workspace": "*.code-workspace, .vscode/*, .idea/*, .nova/*"
  },
  "explorer.fileNesting.expand": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "explorer.compactFolders": false,

  // ============================== //
  //      IntelliSense & AI         //
  // ============================== //
  // Cursor AI
  "cursor.aiEnabled": true,
  "cursor.copilotEnabled": true,
  "cursor.chat.enabled": true,
  "cursor.chat.showSuggestions": true,
  "cursor.chat.defaultModel": "auto",
  "cursor.inlineCompletion.enabled": true,
  "cursor.inlineCompletion.delay": 200,
  "cursor.inlineCompletion.triggerAutomatically": true,
  "cursor.general.disableIndexing": false,
  "cursor.cpp.disableIndexing": false,
  "cursor.python.disableIndexing": false,
  "cursor.typescript.disableIndexing": false,
  "cursor.codebase.includeNodeModules": false,

  // Quick Suggestions
  "editor.quickSuggestions": {
    "other": "inline",
    "comments": false,
    "strings": "inline"
  },

  // IntelliSense
  "editor.suggestSelection": "first",
  "editor.acceptSuggestionOnCommitCharacter": true,
  "editor.acceptSuggestionOnEnter": "smart",
  "editor.suggestOnTriggerCharacters": true,
  "editor.wordBasedSuggestions": "matchingDocuments",
  "editor.snippetSuggestions": "inline",
  "editor.tabCompletion": "on",
  "editor.inlineSuggest.enabled": true,
  "editor.inlineSuggest.showToolbar": "onHover",
  "editor.inlineSuggest.suppressSuggestions": false,
  "editor.parameterHints.enabled": true,
  "editor.parameterHints.cycle": true,

  // TypeScript/JavaScript
  "typescript.suggestionActions.enabled": true,
  "typescript.suggest.autoImports": true,
  "typescript.suggest.completeFunctionCalls": true,
  "typescript.suggest.includeAutomaticOptionalChainCompletions": true,
  "typescript.suggest.includeCompletionsForImportStatements": true,
  "typescript.suggest.objectLiteralMethodSnippets.enabled": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.includePackageJsonAutoImports": "auto",
  "typescript.preferences.quoteStyle": "single",
  "javascript.suggestionActions.enabled": true,
  "javascript.suggest.autoImports": true,
  "javascript.suggest.completeFunctionCalls": true,
  "javascript.suggest.includeAutomaticOptionalChainCompletions": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.preferences.quoteStyle": "single",

  // Emmet
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact",
    "mdx": "javascriptreact",
    "vue-html": "html",
    "phoenix-heex": "html",
    "html-eex": "html",
    "postcss": "css",
    "tailwindcss": "css",
    "styled-components": "css"
  },
  "emmet.showExpandedAbbreviation": "inMarkupAndStylesheetFilesOnly",
  "emmet.triggerExpansionOnTab": true,

  // Code Actions
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit",
    "source.fixAll.eslint": "explicit",
    "source.addMissingImports": "explicit"
  },
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,

  // Suggestions visibility
  "editor.suggest.preview": true,
  "editor.suggest.showMethods": true,
  "editor.suggest.showFunctions": true,
  "editor.suggest.showConstructors": true,
  "editor.suggest.showFields": true,
  "editor.suggest.showVariables": true,
  "editor.suggest.showClasses": true,
  "editor.suggest.showStructs": true,
  "editor.suggest.showInterfaces": true,
  "editor.suggest.showModules": true,
  "editor.suggest.showProperties": true,
  "editor.suggest.showEvents": true,
  "editor.suggest.showOperators": true,
  "editor.suggest.showUnits": true,
  "editor.suggest.showValues": true,
  "editor.suggest.showConstants": true,
  "editor.suggest.showEnums": true,
  "editor.suggest.showEnumMembers": true,
  "editor.suggest.showKeywords": true,
  "editor.suggest.showWords": true,
  "editor.suggest.showColors": true,
  "editor.suggest.showFiles": true,
  "editor.suggest.showReferences": true,
  "editor.suggest.showCustomColors": true,
  "editor.suggest.showFolders": true,
  "editor.suggest.showTypeParameters": true,
  "editor.suggest.showSnippets": true,
  "editor.suggest.showUsers": true,
  "editor.suggest.showIssues": true,

  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

  // ============================== //
  //    Extension-Specific Config   //
  // ============================== //
  "extensions.ignoreRecommendations": false,
  "extensions.autoCheckUpdates": true,
  "extensions.autoUpdate": "onlyEnabledExtensions",

  // Tailwind CSS
  "tailwindCSS.experimental.classRegex": [
    ["tv\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    "class:\\s*?[\"'`]([^\"'`]*).*?,"
  ],
  "tailwindCSS.includeLanguages": {
    "elixir": "html",
    "phoenix-heex": "html"
  },
  "tailwindCSS.classFunctions": ["cva", "cx"],

  // Import Cost
  "importCost.showCalculatingDecoration": true,
  "importCost.largePackageColor": "#d44e40",
  "importCost.mediumPackageColor": "#7cc36e",
  "importCost.smallPackageColor": "#7cc36e",

  // Better Comments
  "better-comments.tags": [
    {
      "tag": "!",
      "color": "#FF2D00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "?",
      "color": "#3498DB",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "//",
      "color": "#474747",
      "strikethrough": true,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "todo",
      "color": "#FF8C00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "*",
      "color": "#98C379",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    }
  ],

  // ============================== //
  //        Debug & Testing         //
  // ============================== //
  "debug.console.fontSize": 14,
  "debug.console.fontFamily": "'Fira Code', monospace",
  "debug.onTaskErrors": "debugAnyway",
  "debug.showBreakpointsInOverviewRuler": true,

  // ============================== //
  //      Additional Settings       //
  // ============================== //
  "telemetry.feedback.enabled": false,
  "security.workspace.trust.untrustedFiles": "open",
  "window.commandCenter": true,
  "window.dialogStyle": "custom",
  "window.titleBarStyle": "custom",
  "breadcrumbs.enabled": true,
  "zenMode.fullScreen": false,
  "zenMode.hideStatusBar": false,
  "zenMode.centerLayout": false,
  "zenMode.showTabs": "single"
}
