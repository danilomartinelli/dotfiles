    ".stylelintrc": "json",
    ".lintstagedrc": "json",
    ".commitlintrc": "json",
    "*.json5": "json5",
    "*.jsonc": "jsonc",
    "*.yml": "yaml",
    "*.yaml": "yaml",
    "*rc": "shellscript",
    "*rc.symlink": "shellscript",
    "*.sh": "shellscript",
    "*.bash": "shellscript",
    "*.zsh": "shellscript",
    ".bashrc": "shellscript",
    ".zshrc": "shellscript",
    "Dockerfile*": "dockerfile",
    "*.dockerfile": "dockerfile",
    "docker-compose*": "dockercompose",
    "*.sql": "sql",
    "*.psql": "sql",
    "*.mysql": "sql",
    "*.pgsql": "sql",
    "*.prisma": "prisma",
    "*.graphql": "graphql",
    "*.gql": "graphql",
    "*.tf": "terraform",
    "*.tfvars": "terraform",
    "*.nginx": "nginx",
    "nginx.conf": "nginx",
    "*.log": "log",
    ".gitignore": "ignore",
    ".gitattributes": "git",
    ".gitmodules": "git",
    ".gitlab-ci.yml": "gitlab",
    "azure-pipelines.yml": "azure-pipelines",
    ".travis.yml": "travis",
    "*.toml": "toml",
    "*.ini": "ini",
    "*.cfg": "ini",
    "*.conf": "properties",
