#!/usr/bin/env bash
#
# bootstrap installs things.

cd "$(dirname "$0")/.."
export DOTFILES_ROOT=$(pwd -P)

set -e

echo ''

info () {
  printf "\r  [ \033[00;34m..\033[0m ] $1\n"
}

user () {
  printf "\r  [ \033[0;33m??\033[0m ] $1\n"
}

success () {
  printf "\r\033[2K  [ \033[00;32mOK\033[0m ] $1\n"
}

fail () {
  printf "\r\033[2K  [\033[0;31mFAIL\033[0m] $1\n"
  echo ''
  exit
}

setup_gitconfig () {
  if ! [ -f git/gitconfig.local.symlink ]
  then
    info 'setup gitconfig'

    git_credential='cache'
    if [ "$(uname -s)" == "Darwin" ]
    then
      git_credential='osxkeychain'
    fi

    user ' - What is your github author name?'
    read -e git_authorname
    user ' - What is your github author email?'
    read -e git_authoremail

    # Escape special characters in user input for safe sed substitution
    git_authorname_escaped=$(printf '%s\n' "$git_authorname" | sed 's/[\\&/]/\\\\&/g')
    git_authoremail_escaped=$(printf '%s\n' "$git_authoremail" | sed 's/[\\&/]/\\\\&/g')

    sed -e "s/AUTHORNAME/$git_authorname_escaped/g" -e "s/AUTHOREMAIL/$git_authoremail_escaped/g" -e "s/GIT_CREDENTIAL_HELPER/$git_credential/g" git/gitconfig.local.symlink.example > git/gitconfig.local.symlink

    success 'gitconfig'
  fi
}


link_file () {
  local src=$1 dst=$2

  # Validate source file exists
  if [ ! -f "$src" ] && [ ! -d "$src" ]; then
    fail "Source file does not exist: $src"
    return 1
  fi

  local overwrite= backup= skip=
  local action=

  # Check if destination exists (file, directory, or symlink)
  if [ -f "$dst" ] || [ -d "$dst" ] || [ -L "$dst" ]
  then

    if [ "$overwrite_all" == "false" ] && [ "$backup_all" == "false" ] && [ "$skip_all" == "false" ]
    then

      # Check if it's a symlink and if it points to the correct source
      local currentSrc=""
      if [ -L "$dst" ]; then
        # Handle broken symlinks gracefully
        currentSrc=$(readlink "$dst" 2>/dev/null || echo "")

        # Check if symlink is broken
        if [ -n "$currentSrc" ] && [ ! -e "$dst" ]; then
          # Broken symlink - ask what to do
          user "Broken symlink exists: $dst, what do you want to do?\n\
          [s]kip, [S]kip all, [o]verwrite, [O]verwrite all, [b]ackup, [B]ackup all?"
          read -n 1 action

          case "$action" in
            o )
              overwrite=true;;
            O )
              overwrite_all=true;;
            b )
              backup=true;;
            B )
              backup_all=true;;
            s )
              skip=true;;
            S )
              skip_all=true;;
            * )
              ;;
          esac
        elif [ -n "$currentSrc" ]; then
          # Resolve absolute paths for comparison
          local src_abs="$(cd "$(dirname "$src")" && pwd -P)/$(basename "$src")"
          local dst_dir="$(dirname "$dst")"
          local currentSrc_abs=""

          # Resolve current symlink target to absolute path
          if [ "${currentSrc#/}" = "$currentSrc" ]; then
            # Relative path
            currentSrc_abs="$(cd "$dst_dir" && cd "$(dirname "$currentSrc")" 2>/dev/null && pwd -P)/$(basename "$currentSrc")" || currentSrc_abs="$currentSrc"
          else
            # Absolute path
            currentSrc_abs="$currentSrc"
          fi

          # Check if symlink already points to the correct source
          if [ "$src_abs" = "$currentSrc_abs" ]; then
            skip=true;
          else
            user "File already exists: $dst ($(basename "$src")), what do you want to do?\n\
            [s]kip, [S]kip all, [o]verwrite, [O]verwrite all, [b]ackup, [B]ackup all?"
            read -n 1 action

            case "$action" in
              o )
                overwrite=true;;
              O )
                overwrite_all=true;;
              b )
                backup=true;;
              B )
                backup_all=true;;
              s )
                skip=true;;
              S )
                skip_all=true;;
              * )
                ;;
            esac
          fi
        fi
      else
        # Regular file or directory exists
        user "File already exists: $dst ($(basename "$src")), what do you want to do?\n\
        [s]kip, [S]kip all, [o]verwrite, [O]verwrite all, [b]ackup, [B]ackup all?"
        read -n 1 action

        case "$action" in
          o )
            overwrite=true;;
          O )
            overwrite_all=true;;
          b )
            backup=true;;
          B )
            backup_all=true;;
          s )
            skip=true;;
          S )
            skip_all=true;;
          * )
            ;;
        esac
      fi

    fi

    overwrite=${overwrite:-$overwrite_all}
    backup=${backup:-$backup_all}
    skip=${skip:-$skip_all}

    if [ "$overwrite" == "true" ]
    then
      rm -rf "$dst"
      success "removed $dst"
    fi

    if [ "$backup" == "true" ]
    then
      mv "$dst" "${dst}.backup"
      success "moved $dst to ${dst}.backup"
    fi

    if [ "$skip" == "true" ]
    then
      success "skipped $src"
    fi
  fi

  if [ "$skip" != "true" ]  # "false" or empty
  then
    # Use absolute path for symlink to avoid issues with relative paths
    local src_abs="$(cd "$(dirname "$src")" && pwd -P)/$(basename "$src")"
    ln -sf "$src_abs" "$dst"
    success "linked $src to $dst"
  fi
}

install_dotfiles () {
  info 'installing dotfiles'

  local overwrite_all=false backup_all=false skip_all=false

  # Find all .symlink files and process them
  find -H "$DOTFILES_ROOT" -maxdepth 2 -name '*.symlink' -not -path '*.git*' -not -path '*/_*' 2>/dev/null | while read -r src; do
    if [ -n "$src" ] && [ -f "$src" ]; then
      dst="$HOME/.$(basename "${src%.*}")"
      link_file "$src" "$dst"
    fi
  done
}

setup_env () {
  if ! [ -f .localrc ]
  then
    info 'setup local environment'

    cp .localrc.example .localrc
    chmod 600 .localrc
    ln -sf "$PWD/.localrc" "$HOME/.localrc"

    success 'local environment configured'
  fi
}

setup_macos () {
  if [ "$(uname -s)" == "Darwin" ]
  then
    info 'setup macOS'
    source _macos/install.sh
    success 'macOS configured'
  fi
}

setup_env
setup_macos
setup_gitconfig

install_dotfiles

# If we're on a Mac, let's install and setup homebrew.
if [ "$(uname -s)" == "Darwin" ]
then
  info "installing dependencies"
  if source bin/dot | while read -r data; do info "$data"; done
  then
    success "dependencies installed"
  else
    fail "error installing dependencies"
  fi
fi

echo ''
echo '  All installed!'
