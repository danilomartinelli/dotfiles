# Added by OrbStack: 'orb' SSH host for Linux machines
# This only works if it's at the top of ssh_config (before any Host blocks).
# This won't be added again if you remove it.
Include ~/.orbstack/ssh/config

# Does NOT change ABOVE this line
# SSH Configuration - Dotfiles's Global Settings

Host *
    AddKeysToAgent yes
    UseKeychain yes
    ServerAliveInterval 60
    ServerAliveCountMax 3
    TCPKeepAlive yes

# Include local configurations if needed (not tracked by git)
Include ~/.ssh/config_local

# === GITHUB CONFIGURATIONS ===
Host github.com
    HostName github.com
    User git
    # Try Ed25519 first, fall back to RSA if not available
    IdentityFile ~/.ssh/id_ed25519
    IdentityFile ~/.ssh/id_rsa

Host github-personal
    HostName github.com
    User git
    IdentityFile ~/.ssh/id_ed25519_personal
    IdentityFile ~/.ssh/id_rsa_personal

Host github-work
    HostName github.com
    User git
    IdentityFile ~/.ssh/id_ed25519_work
    IdentityFile ~/.ssh/id_rsa_work
