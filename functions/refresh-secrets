function refresh-secrets() {
  local _output="$(bwsenv 2>/dev/null)"
  if [ $? -eq 0 ] && [ -n "$_output" ]; then
    eval "$_output"
    echo "ðŸ”„ BWS secrets recarregados com sucesso."
