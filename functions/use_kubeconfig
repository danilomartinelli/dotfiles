use_kubeconfig() {
  local name="$1"
  local var="KUBECONFIG_${name^^}"  # upper case

  if [[ -z "${!var}" ]]; then
    echo "❌ Variável $var não encontrada."
    return 1
  fi

  TMP_KUBECONFIG=$(mktemp)
  echo "${!var}" | base64 --decode > "$TMP_KUBECONFIG"
  export KUBECONFIG="$TMP_KUBECONFIG"
  echo "✅ KUBECONFIG ativado para $name"
}
